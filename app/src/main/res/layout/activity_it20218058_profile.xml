<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IT20218058_Profile">

    <!--top menu-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/margin_bottom"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/home_menu"
        app:navigationIcon="@drawable/ic_menu"
        app:title="@string/login_page_title3" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="126dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar"
        app:srcCompat="@drawable/ic_it20218058_pinkface" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_namePro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_namePro"
                android:textColor="@color/scrolbar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_namePro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/pt_nameReg1"
                android:textAlignment="viewEnd"
                android:textColor="@color/planeText_color"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_emailPro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_emailPro"
                android:textColor="@color/scrolbar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_emailPro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/et_emailReg2"
                android:textAlignment="viewEnd"
                android:textColor="@color/planeText_color"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_uniPro1"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_uniPro"
                android:textColor="@color/scrolbar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_uniPro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/et_uniReg2"
                android:textAlignment="viewEnd"
                android:textColor="@color/planeText_color"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_usernamePro1"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_username"
                android:textColor="@color/scrolbar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_usernamePro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_userHint"
                android:textAlignment="viewEnd"
                android:textColor="@color/planeText_color"
                android:textSize="20sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_passPro1"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_pass"
                android:textColor="@color/scrolbar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_passPro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tv_pass1"
                android:textAlignment="viewEnd"
                android:textColor="@color/planeText_color"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
    <!--edit & delete buttons-->

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/btn_editPro"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_delete"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_deletePro"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_update"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>